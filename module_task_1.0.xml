<horizon:module version="1.0">
    <definition languageCode="en" contentPackage="mdl_task" />
    <tasks>
        <task:createSchema code="mdl_tsk_tasks" name="Tasks" desc="List of tasks">
            <task:createField schemaCode="mdl_tsk_tasks" type="date" code="start" name="Start" desc="Task start date" display="date_time" />
            <task:createField schemaCode="mdl_tsk_tasks" type="date" code="finish" name="Finish" desc="Task description" display="date_time" />
            <task:createField schemaCode="mdl_tsk_tasks" type="number" code="teste_number" name="Teste Number" desc="Teste Number description" display="number" decimals="2" />
            <task:createColumn table="mdl_tsk_tasks" type="jsonb" code="mdl_tsk_assigments" />
        </task:createSchema>
        <task:createSchema code="mdl_tsk_baselines" name="Baselines" desc="List of baselines">
            <task:createField type="lookup" code="resource" name="Resource" desc="Task assigned resource" display="select_single">
                <dataset code="ds_resources" label="full_name" value="username" />
                <fields>
                    <field code="username" name="Code" />
                    <field code="full_name" name="Resource" />
                    <field code="active" name="Active">
                        <filter type="constant" value="true" operator="=" readonly="false" />
                    </field>
                </fields>
            </task:createField> 
        </task:createSchema>
        <task:createFeature moduleCode="mdl_tsk_tasks" code="baseline" name="Task" desc="Task management">
            <permission code="view" name="View All" />
            <permission code="edit" name="Edit" />
            <permission code="create" name="Create" />
            <permission code="delete" name="Delete" />
        </task:createFeature>
    </tasks>
</horizon:module> 
